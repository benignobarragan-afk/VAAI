                                    //        { id: <% //  Response.Write(cSoli.id_cent) %>, value: "<% // Response.Write(ALLTRIM(cSoli.depen))%>" },
                                    <% //  ENDSCAN %>
                                    { id: "-1", value: "Todos" },
