                            }],
                        },
                        {
                            id: "grado", width: 150,sort: "string", css: { 'text-align': 'left' }, 
                            header: [{text:"Grado",css:"my_style"}, {
                                content: "textFilter", placeholder:"Filtrar",
                            }],
                        },	
                        {
                            id: "nombre", width: 300,sort: "string", css: { 'text-align': 'left' }, 
                            header: [{text:"Nombre",css:"my_style"}, {
                                content: "textFilter", placeholder:"Filtrar",
                            }],
                        },			
                        {
                            id: "genero", 
                            height:160, 
                            fillspace:true, minWidth:120,sort: "string", css: { 'text-align': 'left' }, 
                            header: [{text:"Genero",css:"my_style"}, {
                                content: "textFilter", placeholder:"Filtrar",
                                
                            }],
                        },
                        {
                            id: "correo", 
                            height:300, 
                            fillspace:true, minWidth:300,sort: "string", css: { 'text-align': 'left' }, 
                            header: [{text:"Correo",css:"my_style"}, {
                                content: "textFilter", placeholder:"Filtrar",
                                
                            }],
                        },		
                        {
                            id: "siglas", width: 150,sort: "string", css: { 'text-align': 'left' }, 
                            header: [{text:"C.U.",css:"my_style"}, {
