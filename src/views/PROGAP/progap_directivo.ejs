                                        webix.toExcel("dtable", {
                                            //spans:true,
                                            //styles:true
                                        });
                                     }
                                }
                            },
                            /* {
                                view: "button",
                                type: "icon",
                                icon: "mdi mdi-plus",
                                label: "Agregar grupo a oficio",  
                                //disabled: tip == 2 ? true : false ,
                                hidden: tip == 2 ? true : false,
                                width: 200,
                                on: {
